<UserControl x:Class="ChartControls.Chart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChartControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="ucChart"
             mc:Ignorable="d">
    <Canvas Background="LightGreen">
        <!--<TextBox Width="200" Height="50" Text="{Binding ElementName=ucChart, Path=Rrr}"
                 d:Text="Rrr!"/>-->
        <ItemsControl ItemsSource="{Binding ElementName=ucChart, Path=XValues}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Canvas>
                        <Ellipse Width="10" Height="10"
                            Fill="Blue"
                            Canvas.Top="25" >
                        </Ellipse>
                        <Canvas.Left>
                            <MultiBinding Converter="{StaticResource barCanvasLeftConverter}">
                                <MultiBinding.Bindings>
                                </MultiBinding.Bindings>
                            </MultiBinding>
                        </Canvas.Left>
                    </Canvas>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Canvas>
</UserControl>
