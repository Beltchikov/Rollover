<Window x:Class="EventTrader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventTrader"
        mc:Ignorable="d"
        Title="Event Trader" Height="450" Width="800">
    <Grid>
        <TabControl x:Name="tabControl">
            <TabItem Header="USD">
                <Grid Background="#FF1A26DA">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"></RowDefinition>
                        <RowDefinition Height="120"></RowDefinition>
                        <RowDefinition Height="100"></RowDefinition>
                        <RowDefinition Height="140"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="10"></RowDefinition>
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Column="1" Grid.Row="1" Header="Economic Data Source" Foreground="White">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"></ColumnDefinition>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="10"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10"></RowDefinition>
                                <RowDefinition Height="25"></RowDefinition>
                                <RowDefinition Height="25"></RowDefinition>
                                <RowDefinition Height="25"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="10"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Label Content="URL:" Grid.Column="1" Grid.Row="1" 
                                   HorizontalAlignment="Right" Foreground="White"></Label>
                            <TextBox x:Name="txtUrlUsdIr"  Text="https://www.rba.gov.au/cash-rate-target-overview.html" 
                             Grid.Column="2" 
                             Grid.Row="1"></TextBox>

                            <Label Content="Pattern:" Grid.Column="1" Grid.Row="2" 
                           HorizontalAlignment="Right"
                           Foreground="White"></Label>
                            <TextBox x:Name="txtPatternUsdIr"
                             Text="TODO"
                             Grid.Column="2" 
                             Grid.Row="2"></TextBox>

                            <Button x:Name="btTestUsdIr" Padding="10 0 10 0" 
                            Margin="0,0,1,0" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Right" Height="25" VerticalAlignment="Top" Click="btTestUsdIr_Click">Test</Button>

                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Column="1" Grid.Row="2" Header="Platform Connection"
                              Foreground="White">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"></ColumnDefinition>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="200"></ColumnDefinition>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="10"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10"></RowDefinition>
                                <RowDefinition Height="25"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="10"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Label Content="Host:" Grid.Column="1" Grid.Row="1" 
                               HorizontalAlignment="Right"
                               Foreground="White"></Label>
                            <TextBox Text=""
                             Grid.Column="2" Grid.Row="1"></TextBox>

                            <Label Content="Port:" Grid.Column="4" Grid.Row="1" 
                               HorizontalAlignment="Right"
                               Foreground="White"></Label>
                            <TextBox Text=""
                             Grid.Column="5" Grid.Row="1"></TextBox>

                            <Label Content="Client ID:" Grid.Column="7" Grid.Row="1" 
                               HorizontalAlignment="Right"
                               Foreground="White"></Label>
                            <TextBox Text=""
                             Grid.Column="8" Grid.Row="1"></TextBox>

                            <Button Padding="10 0 10 0" 
                            Margin="0,0,1,0" Grid.Column="9" Grid.Row="2" 
                                    HorizontalAlignment="Right" Height="25" VerticalAlignment="Top" Click="btTestUsdIr_Click">Test</Button>


                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Column="1" Grid.Row="3" Header="Trade"
                              Foreground="White">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"></ColumnDefinition>
                                <ColumnDefinition Width="140"></ColumnDefinition>
                                <ColumnDefinition Width="320"></ColumnDefinition>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="10"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10"></RowDefinition>
                                <RowDefinition Height="25"></RowDefinition>
                                <RowDefinition Height="25"></RowDefinition>
                                <RowDefinition Height="25"></RowDefinition>
                                <RowDefinition Height="25"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="10"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Label Content="Kind of Economic Data:" 
                                   Grid.Column="1" Grid.Row="1" 
                                   HorizontalAlignment="Right"
                                   Foreground="White"></Label>
                            <ComboBox Grid.Column="2" Grid.Row="1" ></ComboBox>
                            <Label Content="Time:" 
                                   Grid.Column="3" Grid.Row="1" 
                                   HorizontalAlignment="Right"
                                   Foreground="White"></Label>
                            <DatePicker Grid.Column="4" Grid.Row="1" ></DatePicker>

                            <Label Content="Long Trade Condition:" 
                                   Grid.Column="1" Grid.Row="2" 
                                   HorizontalAlignment="Right"
                                   Foreground="White"></Label>
                            <StackPanel Grid.Column="2" Grid.Row="2" Orientation="Horizontal">
                                <ComboBox Width="60"></ComboBox>
                                <TextBox Width="60" Text="0,2"></TextBox>
                            </StackPanel>

                            <Label Content="Short Trade Condition:" 
                                   Grid.Column="1" Grid.Row="3" 
                                   HorizontalAlignment="Right"
                                   Foreground="White"></Label>
                            <StackPanel Grid.Column="2" Grid.Row="3" Orientation="Horizontal">
                                <ComboBox Width="60"></ComboBox>
                                <TextBox Width="60" Text="0,2"></TextBox>
                            </StackPanel>

                            <Button x:Name="btStartSession" Padding="10 0 10 0" 
                                    Margin="89,0,0,0" Grid.Column="4" Grid.Row="4" 
                                    HorizontalAlignment="Left" Click="btStartSession_Click">
                                Start Trading Session</Button>

                        </Grid>
                    </GroupBox>

                </Grid>
            </TabItem>
            <TabItem Header="AUD">
                <Grid Background="#FFE0CD52">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"></RowDefinition>
                        <RowDefinition Height="25"></RowDefinition>
                        <RowDefinition Height="25"></RowDefinition>
                        <RowDefinition Height="25"></RowDefinition>
                        <RowDefinition Height="10"></RowDefinition>
                    </Grid.RowDefinitions>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
