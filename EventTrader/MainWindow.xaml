<Window x:Class="EventTrader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventTrader"
        mc:Ignorable="d"
        Title="Event Trader" Height="450" Width="800">
    <Grid>
        <TabControl x:Name="tabControl">
           <TabItem Header="USD">
                <Grid Background="#FF1A26DA">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"></RowDefinition>
                        <RowDefinition Height="120"></RowDefinition>
                        <RowDefinition Height="120"></RowDefinition>
                        <RowDefinition Height="120"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="10"></RowDefinition>
                    </Grid.RowDefinitions>
                    
                    <GroupBox Grid.Column="1" Grid.Row="1" Header="Economic Data Source" Foreground="White">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"></ColumnDefinition>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="10"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10"></RowDefinition>
                                <RowDefinition Height="25"></RowDefinition>
                                <RowDefinition Height="25"></RowDefinition>
                                <RowDefinition Height="25"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="10"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Label Content="URL:" Grid.Column="1" Grid.Row="1" 
                                   HorizontalAlignment="Right" Foreground="White"></Label>
                    <TextBox x:Name="txtUrlUsdIr"  Text="https://www.rba.gov.au/cash-rate-target-overview.html" 
                             Grid.Column="2" 
                             Grid.Row="1"></TextBox>

                    <Label Content="Pattern:" Grid.Column="1" Grid.Row="2" 
                           HorizontalAlignment="Right"
                           Foreground="White"></Label>
                    <TextBox x:Name="txtPatternUsdIr"
                             Text="TODO"
                             Grid.Column="2" 
                             Grid.Row="2"></TextBox>

                    <Button x:Name="btTestUsdIr" Padding="10 0 10 0" 
                            Margin="0,0,1,0" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Right" Height="25" VerticalAlignment="Top" Click="btTestUsdIr_Click">Test</Button>

                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Column="1" Grid.Row="2" Header="Platform Connection"
                              Foreground="White">
                    </GroupBox>

                    <GroupBox Grid.Column="1" Grid.Row="3" Header="Trade"
                              Foreground="White">
                    </GroupBox>

                </Grid>
            </TabItem>
            <TabItem Header="AUD">
                <Grid Background="#FFE0CD52">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"></RowDefinition>
                        <RowDefinition Height="25"></RowDefinition>
                        <RowDefinition Height="25"></RowDefinition>
                        <RowDefinition Height="25"></RowDefinition>
                        <RowDefinition Height="10"></RowDefinition>
                    </Grid.RowDefinitions>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
