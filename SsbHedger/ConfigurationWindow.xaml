<Window x:Class="SsbHedger.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SsbHedger"
        mc:Ignorable="d"
        xmlns:model="clr-namespace:SsbHedger.Model"
        Title="Configuration" Height="140" Width="180" 
        SizeToContent="WidthAndHeight"
        Closing="Window_Closing">
    <Window.DataContext>
        <model:MainWindowViewModel></model:MainWindowViewModel>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"></ColumnDefinition>
            <ColumnDefinition Width="60"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="10"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="0"  Text="Host:"
                   HorizontalAlignment="Right"
                   Margin="0,0,5,0"
                   Style="{StaticResource NormalTextBlock}">
        </TextBlock>
        <TextBox Name="txtHost" Grid.Column="2" Grid.Row="0"
                 Style="{StaticResource NormalTextBox}"
                 Text="localhost"></TextBox>

        <TextBlock Grid.Column="1" Grid.Row="1"  Text="Port:"
                   HorizontalAlignment="Right"
                   Margin="0,0,5,0"
                   Style="{StaticResource NormalTextBlock}">
        </TextBlock>
        <TextBox Name="txtPort" Grid.Column="2" Grid.Row="1"
                 Style="{StaticResource NormalTextBox}"
                 Text="4001"></TextBox>

        <TextBlock Grid.Column="1" Grid.Row="2"  Text="Client ID:"
                   HorizontalAlignment="Right"
                   Margin="0,0,5,0"
                   Style="{StaticResource NormalTextBlock}">
        </TextBlock>
        <TextBox Name="txtClientId" Grid.Column="2" Grid.Row="2"
                 Style="{StaticResource NormalTextBox}"
                 Text="1"></TextBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                    Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2">
            <Button Name="btCancel" Margin="0,3,0,3" Padding="5,0,5,0" Click="btCancel_Click">Cancel</Button>
            <Button Name="btDone" Margin="10,3,0,3" Padding="5,0,5,0" Command="{Binding UpdateConfigurationCommand, Mode=OneWay}" 
                    CommandParameter="{Binding Text, ElementName=txtHost}" >Done</Button>
        </StackPanel>


    </Grid>
</Window>
